<?xml version="1.0" encoding="utf-8"?>
<!--коммент!-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent" android:layout_gravity="center">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center" android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ЗАКАЗ ЛОДОЧНОГО ТАКСИ"
                android:id="@+id/textView2"
                android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                android:layout_marginTop="18dp" android:textSize="19dp" android:textStyle="bold"/>
        <LinearLayout
                android:id="@+id/fromToChoice"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:gravity="center">
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:text="Откуда"
                    android:id="@+id/fromChoice"
                    android:editable="false"
                    android:layout_marginTop="5dp"
                    android:gravity="center"/>
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:text="Куда"
                    android:id="@+id/toChoice"
                    android:editable="false"
                    android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/dateAndTimeFrame"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"  android:baselineAligned="false"
                android:layout_alignParentRight="false"
                android:layout_below="@id/fromToChoice">
            <Button android:layout_width="wrap_content"
                    android:layout_weight = "1"
                    android:layout_height="50dp"
                    android:text="Выбор даты"
                    android:id="@+id/dateOrder"
                    android:textSize="12dp"
                    android:onClick="onClick" android:layout_marginTop="5dp" android:layout_marginLeft="3dp"/>
            <Button android:layout_width="wrap_content"
                    android:layout_weight = "1"
                    android:layout_height="50dp"
                    android:text="Выбор времени"
                    android:id="@+id/timeOrder"
                    android:textSize="12dp"
                    android:onClick="onClick" android:layout_marginTop="5dp"/>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Оплата: 0.0"
                android:id="@+id/cost"
                android:layout_alignLeft="@+id/dateAndTimeFrame" android:layout_below="@+id/dateAndTimeFrame"
                android:textSize="24dp" android:layout_marginTop="10dp" android:textStyle="bold"
                android:layout_marginLeft="7dp"/>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" android:layout_alignParentBottom="true">
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="ЗАКАЗАТЬ"
                android:id="@+id/doOrder"
                android:enabled="false"
                android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>